{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "src/build" }
    }
  ],
  "routes": [
    { "src": "/api/v1/(.*)", "dest": "/server/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/src/build/$1" }
  ]
}
